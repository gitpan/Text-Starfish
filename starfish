#!/usr/bin/perl -s
# (c) 2001-2005 Vlado Keselj www.cs.dal.ca/~vlado
#
# $Id: starfish,v 3.4 2005/02/10 13:55:43 vlado Exp $
#
# starfish - the script for using Starfish.pm

use Text::Starfish;

my $sf = Text::Starfish->new();

$sf->{OUTFILE}       = $o       if defined $o;       undef($o);
$sf->{INITIAL_CODE}  = $e       if defined $e;       undef($e);
$sf->{REPLACE}       = $replace if defined $replace; undef($replace);
$sf->{NEW_FILE_MODE} = $mode    if defined $mode;    undef($mode);

$sf->run(@ARGV);
